<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="350.0" prefWidth="500.0" spacing="15.0" styleClass="main-pane" stylesheets="@../css/login_view.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chatsystem.view.LoginController">
   <children>
      <HBox alignment="CENTER_RIGHT">
         <children>
            <Hyperlink focusTraversable="false" onAction="#onRegister" text="Register" textFill="WHITE" underline="true">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Hyperlink>
         </children>
      </HBox>
      <Circle fx:id="userImage" fill="DODGERBLUE" radius="50.0" stroke="BLACK" strokeType="INSIDE" />
      <HBox alignment="CENTER" maxWidth="-Infinity" styleClass="input-field" VBox.vgrow="NEVER">
         <children>
            <FontAwesomeIcon fill="#4c956c" glyphName="USER" size="2em" />
            <TextField fx:id="usernameField" />
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" maxWidth="-Infinity" styleClass="input-field">
         <children>
            <FontAwesomeIcon fill="#4c956c" glyphName="KEY" size="2em" />
            <PasswordField fx:id="passwordField" styleClass="text-field" />
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </HBox>
      <HBox fx:id="errorLabel" maxWidth="-Infinity">
         <children>
            <Button mnemonicParsing="false" onAction="#onLogin" prefWidth="80.0" text="Login" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <Label text="Error" textFill="RED">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
   </children>
   <padding>
      <Insets left="20.0" right="20.0" />
   </padding>
</VBox>
